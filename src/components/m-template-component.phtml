<!-- Encapsulado en el tag component-->
<component id="--id" class="">
    <!-- Estructura HTML del componente -->
    <label class="bordered">Atributo label: $$label</label>
    <span>--content</span>
    <!-- Estilos personales del componente -->

    <style scoped>
        label{
            display: block;
            color: green;
            cursor: pointer;
        }
    </style>
    <ul>
        @for($$mydataobject)
            <li>$$key $$value</li>
        @endfor
    </ul>
        
    <!-- Comportamiento del componente -->
    <script scoped>
        // Necesario para la correcta identificaciÃ³n del componente
        const $this = document.getElementById('--id') 

        $this.onclick = e => {
            e.stopPropagation();
            alert('Ejemplo de comportamiento de un componente');
        }

    </script>
    
</component>